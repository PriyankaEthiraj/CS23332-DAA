#include<stdio.h>
void fun(int n)
{   int count=0;
    if(n==1)
    {
        count++;
        //printf("*");
        count++;
    }
    else
    {
        count++;
        for(int i=1;i<=n;i++)
        {
            count++;
            for(int j=1;j<=n;j++)
            {
                count++;
                //printf("*");
                count++;
                //printf("*");
                count++;
                break;
            }
            count++;
        }
        count++;
    }
    printf("%d",count);
}
int main()
{
    int a;
    scanf("%d",&a);
    fun(a);
}
