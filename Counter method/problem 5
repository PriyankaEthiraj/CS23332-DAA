#include<stdio.h>
void reverse(int n)
{
    int rev=0,count=0,rem;
    count++;
    while(n!=0)
    {
        count++;
        rem=n%10;
        count++;
        rev=rev*10+rem;
        count++;
        n/=10;
        count++;
    }
    count++;
    //printf("%d",rev);
    count++;
    printf("%d",count);
}
int main()
{
    int a;
    scanf("%d",&a);
    reverse(a);
}
